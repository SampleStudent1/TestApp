<h1>Listing ad_formats</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ad_formats.each do |ad_format| %>
      <tr>
        <td><%= ad_format.name %></td>
        <td><%= link_to 'Show', ad_format %></td>
        <td><%= link_to 'Edit', edit_ad_format_path(ad_format) %></td>
        <td><%= link_to 'Destroy', ad_format, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ad format', new_ad_format_path %>
